<xs:schema attributeFormDefault="unqualified" elementFormDefault="qualified" xmlns:xs="http://www.w3.org/2001/XMLSchema">
  <xs:element name="coffeeMachine">
    <xs:complexType>
      <xs:sequence>
        <xs:element name="drinks">
          <xs:complexType>
            <xs:sequence>
              <xs:element name="drink" maxOccurs="unbounded" minOccurs="0">
                <xs:complexType>
                  <xs:simpleContent>
                    <xs:extension base="xs:string">
                      <xs:attribute type="xs:nonNegativeInteger" name="amount" use="required"/>
                      <xs:attribute type="xs:string" name="name" use="required"/>
                      <xs:attribute type="xs:nonNegativeInteger" name="price" use="required"/>
                    </xs:extension>
                  </xs:simpleContent>
                </xs:complexType>
              </xs:element>
            </xs:sequence>
          </xs:complexType>
        </xs:element>
        <xs:element name="money">
          <xs:complexType>
            <xs:sequence>
              <xs:element name="coin" maxOccurs="unbounded" minOccurs="0">
                <xs:complexType>
                  <xs:simpleContent>
                    <xs:extension base="xs:string">
                      <xs:attribute type="xs:string" name="type" use="required"/>
                      <xs:attribute type="xs:nonNegativeInteger" name="amount" use="required"/>
                    </xs:extension>
                  </xs:simpleContent>
                </xs:complexType>
              </xs:element>
            </xs:sequence>
          </xs:complexType>
        </xs:element>
      </xs:sequence>
    </xs:complexType>
  </xs:element>
</xs:schema>